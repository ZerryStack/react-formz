{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "1.4.0",
  "npmClient": "yarn",
  "gitTagVersion": true,
  "conventionalCommits": true,
  "changelogPreset": "./changelog-preset.config.js",
  "command": {
    "version": {
      "message": "release %s [skip ci]"
    },
    "publish": {}
  },
  "useNx": true,
  "loglevel": "debug",
  "packages": [
    "packages/*"
  ],
  "ignore": "packages/(react-formz-storybook|documentation|react-formz-storybook-native)/**",
  "ignoreChanges": [
    "packages/react-formz-storybook/**",
    "packages/documentation/**",
    "packages/react-formz-storybook-native/**"
  ],
  "private": false,
  "verbose": true
}
